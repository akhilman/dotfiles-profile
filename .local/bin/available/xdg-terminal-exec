#!/bin/sh

TERM=xterm
PROGARG=-e

if command -v kitty > /dev/null 2>&1; then
	TERM=kitty
elif command -v alacritty > /dev/null 2>&1; then
	TERM=alacritty
else
	case "$XDG_SESSION_DESKTOP" in
		sway )
			TERM=foot
			PROGARG=
			;;
		gnome )
			if command -v kgx > /dev/null 2>&1; then
				TERM=kgx
			else
				TERM=gnome-terminal
			fi
			;;
		xfce )
			TERM=xfce4-terminal
			;;
	esac
fi

if [ $# -gt 0 ]; then
	$TERM $PROGARG $@
else
	$TERM
fi
